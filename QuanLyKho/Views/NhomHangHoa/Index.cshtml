@model QuanLyKho.Models.NhomHangHoa

@{
    /**/

    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="panel panel-default">
        <div class="panel-body">
            <h3 class="text-primary">NHÓM HÀNG HÓA</h3>
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-body">
            <button id="btnCreate" type="button" class="btn btn-lg btn-success" data-toggle="modal" data-target="#createModal">Thêm mới</button>
            <button type="button" id="btnReload" class="btn btn-lg btn-primary">Làm mới dữ liệu</button>
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-body">
            @*Datatable*@
            <table id="listNhom" class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>
                            Mã nhóm hàng hóa
                        </th>
                        <th>
                            Tên nhóm hàng hóa
                        </th>
                        <th>
                            Khóa
                        </th>
                        <th>
                            Sửa
                        </th>

                    </tr>
                </thead>
                <tbody></tbody>

            </table>

        </div>
    </div>

    @*createModal*@
    <div class="modal fade" id="createModal" role="dialog" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Thêm/Cập nhật nhóm hàng hóa</h4>
                </div>
                <div class="modal-body">


                    @Html.HiddenFor(m => m.Id)
                  
                    <div class="form-group">
                        @Html.LabelFor(m => m.MaNhomHangHoa)
                        @Html.TextBoxFor(m => m.MaNhomHangHoa, new { @class = "form-control", autofocus = "autofocus" })

                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.TenNhomHangHoa)
                        @Html.TextBoxFor(m => m.TenNhomHangHoa, new { @class = "form-control" })
                    </div>

                    <div id="divError" class="alert alert-danger collapse">
                        <a id="linkClose" class="close" href="#">&times;</a>
                        <div id="divErrorText">

                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" id="btnSave" class="btn btn-primary">Lưu</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>

    </div>

}




@section Scripts {
    <script src="~/Scripts/DTO/NhomHangHoa.js"></script>
    <script src="~/Scripts/DTO/variables.js"></script>
    <script>

        $(document).ready(function () {

            hideErrorDiv();

            //khoa
            $("#listNhom").on("click", ".js-lock", function () {
                if (confirm("Bạn muốn khóa nhóm hàng hóa này?")) {
                    lockGroup($(this).attr("data-nhom-id"));
                }

            });


            //load du lieu
            loadTable();

            $("#linkClose").click(function () {
                $("#divError").hide("fade");
            });

            //Save nhom hang hoa
            $("#btnCreate").click(function () {
                
                clear();
            });

            $("#btnSave").click(function () {
                
                SaveData();
            });

            $("#btnReload").click(function () {
                loadTable();
            });


            // edit nhom hang hoa
            $("#listNhom").on("click", ".js-edit", function () {
                loadNhomId($(this).attr("data-nhom-id"));
            });

        });


    </script>
}



